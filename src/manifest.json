{
  "applications": {
    "gecko": {
      "id": "glutton@science-miner.com",
      "strict_min_version": "49.0a2",
      "update_url": "https://science-miner.com/download/updates.json"
    }
  },
  "manifest_version": 2,
  "name": "biblio-glutton",
  "version": "0.1.0",
  "description": "An add-on for identifying Open Access resources in the browser pages",
  "icons": {
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "96": "icons/logo-96.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "webNavigation",
    "storage",
    "activeTab",
    "contextMenus",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": "icons/logo-96.png",
    "default_title": "Science Miner",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/postInstall.js", "background/tabBootstrap.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "vendors/jquery-3.2.1.js",
      "content_scripts/tabBootstrap.js"
    ],
    "css": [
      "content_scripts/main.css"
    ]
  }]
}
